@model List<Test3.Models.BookStore>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <h1 class="text-center text-primary">Books</h1>

    <a class="btn btn-sm btn-success btn-create" asp-controller="Book" asp-action="AddBook">AddBook</a>
    <p class="text-center text-success">@TempData["error"]</p>

    <table class="table table-bordered" id="BookTable">
        <thead>
            <tr>
                <th>Name</th>
                <th>₹Price</th>
                <th>Description</th>
                <th>Author</th>
                <th>Image</th>
                <th>Action</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var d in Model)
            {
                <tr>
                    <td>@d.Name</td>
                    <td>₹ @d.Price</td>
                    <td>@d.Description</td>
                    <td>@d.Author</td>
                    <td><img src="/@d.Image" height="100px" width="100px"></td>
                    <td>
                        <a class="btn btn-warning" asp-controller="Book" asp-action="Edit" asp-route-id="@d.Id">Edit</a>
                        <a class="btn btn-sm btn-danger " asp-controller="Book" asp-action="Delete" asp-route-id="@d.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>